<?xml version="1.0" encoding="UTF8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="seki.spring.dao.StudentMapper">

    <resultMap id="StudentTeacher" type="seki.spring.pojo.Student">
        <id property="id" column="id"></id>
        <id property="name" column="name"></id>
        <!--复杂的属性单独处理
            对象：association
            集合：collection
        -->
        <association property="teacher" column="tid" javaType="seki.spring.pojo.Teacher" select="getTeacherById"></association>
    </resultMap>

    <select id="getStudents" resultMap="StudentTeacher">
        select * from mybatis.student
    </select>

    <!---->
    <select id="getTeacherById" resultType="seki.spring.pojo.Teacher">
        select * from mybatis.teacher where id = #{id}
    </select>

</mapper>