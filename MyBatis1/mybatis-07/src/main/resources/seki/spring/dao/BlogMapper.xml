<?xml version="1.0" encoding="UTF8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="seki.spring.dao.BlogMapper">

    <!--在此文件开启全局缓存-->
    <cache  eviction="FIFO"
            flushInterval="60000"
            size="512"
            readOnly="true"
    />
    <insert id="addBlog" parameterType="seki.spring.pojo.Blog">
        insert into mybatis.blog(id,title,author,create_time,views)
        values(#{id},#{title},#{author},#{createTime},#{views})
    </insert>

    <select id="queryBlogIF" parameterType="map" resultType="seki.spring.pojo.Blog">
        /*使用where标签改造where 1 = 1
          如果第一句不成立而第二句成立，会自动删除AND
          */
        select * from mybatis.blog
        <where>
            <if test = "title != null">
                title = #{title}
            </if>
            <if test = "author != null">
                AND author = #{author}
            </if>
            <if test = "views != null">
                AND views > #{views}
            </if>
        </where>
        <!--select * from mybatis.blog where 1 = 1
        <if test = "title != null">
            and title = #{title}
        </if>
        <if test="author != null">
            and author = #{author}
        </if>
        <if test="views != null">
            and views > #{views}
        </if>-->
    </select>

    <select id="queryBlogChoose" parameterType="map" resultType="seki.spring.pojp.Blog">
        select * from mybatis.blog
        <where>
            <choose>
                <when test="title != null">
                    title = #{title}
                </when>
                <when test="author != null">
                    and author = #{author}
                </when>
                <when test="views != null">
                    and views > #{views}
                </when>
                <otherwise>
                    and state = 'active'
                </otherwise>
            </choose>
        </where>
    </select>
</mapper>