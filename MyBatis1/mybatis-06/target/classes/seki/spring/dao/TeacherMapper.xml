<?xml version="1.0" encoding="UTF8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="seki.spring.dao.TeacherMapper">
    <select id="getTeacherList" resultType="seki.spring.pojo.Teacher">
        select * from mybatis.teacher
    </select>

    <!--按结果嵌套查询-->
    <select id="getTeacherById" resultMap="TeacherStudent">
        select s.id sid,s.name sname,t.id tid,t.name tname
        from mybatis.teacher t,mybatis.student s
        where s.tid = t.id and tid = #{id}
    </select>

    <resultMap id="TeacherStudent" type="seki.spring.pojo.Teacher">
        <result property="id" column="tid"></result>
        <result property="name" column="tname"></result>
        <!--复杂的属性单独处理。对象使用association，集合使用collection
            javaType=""指定属性的类型，一般为对象时使用
            ofType=“”,表示集合的泛型
        -->
        <collection property="students" ofType="seki.spring.pojo.Student">
            <result property="id" column="sid"></result>
            <result property="name" column="sname"></result>
            <result property="tid" column="tid"></result>
        </collection>
    </resultMap>
</mapper>